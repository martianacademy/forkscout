{
    "name": "forkscout",
    "version": "3.0.0",
    "description": "Forkscout AI agent â€” Telegram + LLM + MCP + Tools",
    "private": true,
    "type": "module",
    "scripts": {
        "stop": "pkill -f 'src/index.ts' 2>/dev/null; sleep 1; echo '[forkscout] stopped'",
        "start": "bun run stop; bun run src/index.ts",
        "dev": "bun run stop; bun --hot src/index.ts",
        "cli": "bun run stop; bun run src/index.ts --cli",
        "cli:dev": "bun run stop; bun --hot src/index.ts --cli",
        "typecheck": "bun run --bun tsc --noEmit",
        "devtools": "bun run node_modules/.bin/devtools"
    },
    "dependencies": {
        "@ai-sdk/anthropic": "^3.0.46",
        "@ai-sdk/deepseek": "^2.0.20",
        "@ai-sdk/devtools": "^0.0.15",
        "@ai-sdk/elevenlabs": "^2.0.20",
        "@ai-sdk/google": "^3.0.30",
        "@ai-sdk/huggingface": "^1.0.32",
        "@ai-sdk/openai": "^3.0.31",
        "@ai-sdk/replicate": "^2.0.20",
        "@ai-sdk/vercel": "^2.0.32",
        "@ai-sdk/xai": "^3.0.57",
        "@modelcontextprotocol/sdk": "^1.26.0",
        "ai": "^6.0.86",
        "dotenv": "^17.3.1",
        "gpt-tokenizer": "^3.4.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^22.0.0",
        "typescript": "^5.7.2"
    }
}