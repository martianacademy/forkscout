{
    "name": "forkscout",
    "version": "2.0.1",
    "description": "Autonomous AI agent with persistent memory, multi-model routing, sub-agents, self-evolution, and production-grade security",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "commonjs",
    "scripts": {
        "dev": "tsx watch --exclude '.forkscout/**' --exclude '**/*.bak' src/cli.ts",
        "start": "tsx src/cli.ts",
        "serve": "tsx src/serve.ts",
        "serve:dist": "tsx dist/serve.js",
        "serve:dist:watch": "node scripts/watch-dist.mjs",
        "watchdog": "./watchdog.sh",
        "watchdog:dev": "./watchdog.sh --dev",
        "build": "tsc",
        "clean": "rm -rf dist tsconfig.tsbuildinfo",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write 'src/**/*.ts'",
        "format:check": "prettier --check 'src/**/*.ts'",
        "prompt": "tsx -e \"const { getDefaultSystemPrompt } = require('./src/agent/system-prompts'); console.log(getDefaultSystemPrompt())\"",
        "prompt:guest": "tsx -e \"const { getPublicSystemPrompt } = require('./src/agent/system-prompts'); console.log(getPublicSystemPrompt())\"",
        "prompt:agent": "tsx -e \"const { getSubAgentSystemPrompt } = require('./src/agent/system-prompts'); console.log(getSubAgentSystemPrompt({ label: 'worker-1', toolNames: ['web_search','browse_web','read_file','run_command','think'] }))\"",
        "prompt:types": "tsx -e \"const { getPromptTypes } = require('./src/agent/system-prompts'); getPromptTypes().then(t => console.log(t.join(', ')))\"",
        "prompt:custom": "tsx -e \"const t = process.argv[1] || 'admin'; const { getPrompt } = require('./src/agent/system-prompts'); getPrompt(t).then(p => console.log(p))\"",
        "test": "vitest"
    },
    "dependencies": {
        "@ai-sdk/anthropic": "^3.0.44",
        "@ai-sdk/google": "^3.0.29",
        "@ai-sdk/openai": "^3.0.29",
        "@modelcontextprotocol/sdk": "^1.26.0",
        "@types/ws": "^8.18.1",
        "ai": "^6.0.86",
        "dotenv": "^17.3.1",
        "gpt-tokenizer": "^3.4.0",
        "lgtv2": "^1.6.3",
        "playwright": "^1.49.1",
        "ws": "^8.19.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.0.0",
        "prettier": "^3.4.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    },
    "keywords": [
        "ai",
        "agent",
        "rag",
        "automation",
        "llm",
        "memory"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}