{
    "$schema": "./packages/agent/src/config.schema.json",
    "provider": "openai-compatible",
    "baseURL": "https://api.aimlapi.com/v1",
    "fallbackProviders": [
        "openrouter",
        "google",
        "anthropic"
    ],
    "temperature": 0.7,
    "budget": {
        "dailyUSD": 5,
        "monthlyUSD": 50,
        "warningPct": 80
    },
    "router": {
        "openrouter": {
            "fast": {
                "model": "google/gemini-3-flash-preview"
            },
            "balanced": {
                "model": "google/gemini-3-flash-preview"
            },
            "powerful": {
                "model": "google/gemini-3-flash-preview"
            }
        },
        "openai": {
            "fast": {
                "model": "gpt-5-mini"
            },
            "balanced": {
                "model": "gpt-5"
            },
            "powerful": {
                "model": "gpt-5.2-codex"
            }
        },
        "google": {
            "fast": {
                "model": "gemini-2.5-flash"
            },
            "balanced": {
                "model": "gemini-3-flash-preview"
            },
            "powerful": {
                "model": "gemini-3-pro-preview"
            }
        },
        "anthropic": {
            "fast": {
                "model": "claude-haiku-4.5"
            },
            "balanced": {
                "model": "claude-sonnet-4.6"
            },
            "powerful": {
                "model": "claude-opus-4.6"
            }
        },
        "openai-compatible": {
            "fast": {
                "model": "claude-sonnet-4-5-20250929"
            },
            "balanced": {
                "model": "claude-sonnet-4-5-20250929"
            },
            "powerful": {
                "model": "claude-sonnet-4-5-20250929"
            }
        }
    },
    "agent": {
        "maxIterations": 100,
        "maxSteps": 100,
        "autoRegisterTools": true,
        "port": 3210,
        "owner": "Suru",
        "appName": "Forkscout Agent",
        "appUrl": "https://github.com/martianacademy/forkscout",
        "forkscoutMemoryMcpUrl": "http://localhost:3211/mcp",
        "mcpServers": {
            "sequential-thinking": {
                "command": "npx",
                "args": [
                    "-y",
                    "@modelcontextprotocol/server-sequential-thinking"
                ]
            },
            "deepwiki": {
                "url": "https://mcp.deepwiki.com/mcp"
            },
            "context7": {
                "command": "npx",
                "args": [
                    "-y",
                    "@upstash/context7-mcp"
                ]
            }
        },
        "subAgent": {
            "maxSteps": 50,
            "timeoutMs": 600000,
            "maxParallel": 10,
            "tier": "balanced",
            "retryAttempts": 5,
            "retryDelayMs": 1000,
            "outputMaxLength": 5000,
            "temperature": 0.5,
            "batchTimeoutMs": 0
        },
        "server": {
            "rateLimitLocal": 300,
            "rateLimitRemote": 30,
            "rateLimitWindowMs": 60000,
            "maxBodyBytes": 1048576
        },
        "telegram": {
            "maxInbox": 200,
            "maxHistory": 20
        },
        "failureEscalationThreshold": 3,
        "browserIdleMs": 60000,
        "activityLogMaxBytes": 5242880
    },
    "searxng": {
        "url": "http://localhost:8888"
    }
}